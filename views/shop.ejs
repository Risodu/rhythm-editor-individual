<div class="container">
    <h1>Nastavenia</h1>

    <h3>Obtiažnosť</h3>
    <div class="row">
        <% for( let i = 0; i < presets.length; i++) { %>
            <form class="col-md-auto" action="/shop/preset/<%= presets[i].id %>" method="post">
                <button type="btn submit" class="btn btn<%= presets[i].id == chosenPresetId ? "" : "-outline" %>-<%= presets[i].style %>"><%= presets[i].name %></button>
            </form>
        <% } %>
    </div>
    
    <div class="row">
        <% for( let i = 0; i < upgrades.length; i++ ) { %>
            <div class="card col-4">
                <% if (upgrades[i].img) { %>
                    <img class="card-img-top" src="<%- upgrades[i].img %> " />
                <% } %>
                <h5 class="card-title"><%= upgrades[i].name %> </h5>
                <p class="card-body"><%= upgrades[i].description %> </p>
                <% if (upgrades[i].isPurchased) { %>
                    <form action="/shop/activate/<%= upgrades[i].id %> " method="post">
                        <button type="submit" class="btn btn-primary">
                            Zapnúť
                        </button>
                    </form>
                <% } else { %>
                    <form action="/shop/deactivate/<%= upgrades[i].id %> " method="post">
                        <button type="submit" class="btn btn-success">
                            Vypnúť
                        </button>
                    </form>
                <% } %> 
            </div>
        <% } %>
    </div>
    
    <script defer>
        const form = document.getElementById('redeemform')
        const coins = document.getElementById('coins')
        form.addEventListener('submit', (e) => {
            e.preventDefault()
            const formData = new FormData(form)
            fetch('/coins/redeem', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    code: formData.get('code')
                })
            }).then(res=> {
                if(res.status == 400){
                    form.reset()
                    alert('Neplatný kód: ' + formData.get('code'))
                    return
                }
                res.json().then((data)=> {
                    form.reset()
                    location.reload()
                })
            })
        })
    </script>
</div>